{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "refactor",
        "style",
        "chore",
        "ci",
        "docs",
        "test",
        "merge"
      ]
    ],
    "scope-empty": [
      2,
      "never"
    ],
    "header-max-length": [
      2,
      "always",
      120
    ]
  }
}